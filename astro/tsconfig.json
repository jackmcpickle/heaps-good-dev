{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["../*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "../db/schema.ts",
    "./src/**/*.astro",
    "./src/**/*.tsx",
    "./src/**/*.ts",
  ]
}
